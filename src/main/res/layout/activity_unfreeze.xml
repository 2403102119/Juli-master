<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/app_bg"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.FrozenWalletActivity">

    <LinearLayout
        android:id="@+id/ll_balance_show"
        android:background="@mipmap/wallet_balance_bg"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <TextView
            android:layout_marginTop="35dp"
            android:textSize="18dp"
            android:textColor="@color/nomalText"
            android:text="解冻余额"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="2000"
            android:textSize="24sp"
            android:includeFontPadding="false"
            android:textColor="@color/text_red"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:layout_marginTop="68dp"
        android:layout_below="@id/ll_balance_show"
        android:layout_centerHorizontal="true"
        android:background="@drawable/deep_blue_bg"
        android:text="提现"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:layout_width="300dp"
        android:layout_height="50dp" />

</RelativeLayout>