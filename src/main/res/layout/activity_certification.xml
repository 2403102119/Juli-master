<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/app_bg"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CertificationActivity">

    <RelativeLayout
        android:layout_marginTop="6dp"
        android:id="@+id/rl_my_pay_show2"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_height="44dp">

        <TextView
            android:id="@+id/tv_my_pay_name"
            android:text="姓名"
            android:textSize="17sp"
            android:layout_centerVertical="true"
            android:textColor="@color/gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_certification_name"
            android:layout_marginLeft="96dp"
            android:background="@null"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:layout_centerVertical="true"
            android:hint="请填写真实姓名"
            android:textSize="13sp"
            android:textColorHint="@color/hintColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_height="44dp">

        <TextView
            android:text="身份证号"
            android:textSize="17sp"
            android:layout_centerVertical="true"
            android:textColor="@color/gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_certification_id_number"
            android:layout_marginLeft="96dp"
            android:inputType="number"
            android:digits="@string/number_and_letter"
            android:background="@null"
            android:layout_centerVertical="true"
            android:imeOptions="actionNext"
            android:maxLength="18"
            android:hint="请输入本人身份证号"
            android:textSize="13sp"
            android:textColorHint="@color/hintColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_height="44dp">

        <TextView
            android:text="银行卡"
            android:textSize="17sp"
            android:layout_centerVertical="true"
            android:textColor="@color/gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_certification_bank_card"
            android:layout_marginLeft="96dp"
            android:background="@null"
            android:layout_centerVertical="true"
            android:inputType="number"
            android:maxLength="19"
            android:hint="请输入本人银行卡"
            android:textSize="13sp"
            android:textColorHint="@color/hintColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="12dp">

        <TextView
            android:text="*"
            android:textSize="15sp"
            android:includeFontPadding="false"
            android:textColor="@color/text_blue_fuhao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="6dp"
            android:textSize="12sp"
            android:includeFontPadding="false"
            android:text="所填写的信息必须本人的真实信息，否则无法提现"
            android:textColor="@color/hintColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_certification_bind"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bind_gray_bg"
        android:layout_marginTop="31dp"
        android:layout_width="300dp"
        android:text="确定绑定"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:layout_height="49dp" />

</LinearLayout>