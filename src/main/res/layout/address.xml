<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_light"
    android:orientation="vertical">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/box_cancel"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:background="@drawable/bg_rectangel_black"
            android:text="取消"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/box_ok"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:textColor="@color/text_blue2"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:background="@drawable/bg_rectangel_blue"
            android:text="确定"
            android:textSize="15sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="horizontal">

        <com.tcckj.juli.view.WheelView
            android:id="@+id/province"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:itemNumber="6"
            app:lineColor="#00000000"
            app:lineHeight="0dp"
            app:maskHight="20dp"
            app:noEmpty="true"
            app:normalTextColor="#679CD2"
            app:normalTextSize="14sp"
            app:selectedTextColor="@color/text_blue2"
            app:selectedTextSize="18sp"
            app:unitHight="30dp" />

        <com.tcckj.juli.view.WheelView

            android:id="@+id/city"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            app:itemNumber="6"
            app:lineColor="#00000000"
            app:lineHeight="1dp"
            app:maskHight="20dp"
            app:noEmpty="true"
            app:normalTextColor="#679CD2"
            app:normalTextSize="14sp"
            app:selectedTextColor="@color/text_blue2"
            app:selectedTextSize="18sp"
            app:unitHight="30dp" />

        <com.tcckj.juli.view.WheelView
            android:id="@+id/county"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            app:itemNumber="6"
            app:lineColor="#00000000"
            app:lineHeight="1dp"
            app:maskHight="20dp"
            app:noEmpty="true"
            app:normalTextColor="#679CD2"
            app:normalTextSize="14sp"
            app:selectedTextColor="@color/text_blue2"
            app:selectedTextSize="18sp"
            app:unitHight="30dp" />

        <com.tcckj.juli.view.WheelView
            android:id="@+id/street"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            app:itemNumber="6"
            app:lineColor="#cccccc"
            app:lineHeight="1dp"
            app:maskHight="20dp"
            app:noEmpty="true"
            app:normalTextColor="#999999"
            app:normalTextSize="14sp"
            app:selectedTextColor="#333333"
            app:selectedTextSize="18sp"
            app:unitHight="30dp" />
    </LinearLayout>

</LinearLayout>