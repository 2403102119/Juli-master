<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/app_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ApplyPortActivity">

    <TextView
        android:id="@+id/tv_choose_port"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/white_round_bg"
        android:text="选择端口区域"
        android:gravity="center"
        android:textColor="@color/text_blue2"
        android:layout_width="119dp"
        android:layout_height="38dp" />

    <com.tcckj.juli.view.NiceRecyclerView
        android:layout_marginTop="8dp"
        android:id="@+id/nrv_address_list"
        android:visibility="gone"
        android:layout_below="@id/tv_choose_port"
        app:listDirection="VERTICAL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.tcckj.juli.view.NiceRecyclerView
        android:layout_marginTop="8dp"
        android:id="@+id/nrv_port_list"
        android:layout_below="@id/tv_choose_port"
        app:listDirection="VERTICAL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_apply_port_sure"
        android:layout_alignParentBottom="true"
        android:background="@color/text_blue2"
        android:text="确定"
        android:gravity="center"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="49dp" />

</RelativeLayout>