<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/app_bg"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ChangePasswordActivity">

    <LinearLayout
        android:id="@+id/ll_original_phone"
        android:background="@color/white"
        android:layout_marginTop="6dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            android:layout_marginLeft="10.5dp"
            android:text="手机号"
            android:textSize="17sp"
            android:textColor="@color/gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_user_phone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:inputType="textPhonetic"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:digits="@string/number_and_letter"
            android:textSize="13sp"
            android:textColorHint="@color/hintColor"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="10dp"
            android:hint="请输入手机号"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            android:layout_marginLeft="10.5dp"
            android:text="新密码"
            android:textSize="17sp"
            android:textColor="@color/gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_new_password"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:inputType="textPhonetic"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:digits="@string/number_and_letter"
            android:textSize="13sp"
            android:textColorHint="@color/hintColor"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="10dp"
            android:hint="请输入新密码"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            android:layout_marginLeft="10.5dp"
            android:text="新密码"
            android:textSize="17sp"
            android:textColor="@color/gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_new_password_again"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:textSize="13sp"
            android:textColorHint="@color/hintColor"
            android:inputType="textPhonetic"
            android:digits="@string/number_and_letter"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="10dp"
            android:hint="请再次输入输入新密码"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_change_password_verification"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            android:layout_marginLeft="10.5dp"
            android:text="验证码"
            android:textSize="17sp"
            android:textColor="@color/gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_verification_code"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:inputType="textPhonetic"
            android:digits="@string/number_and_letter"
            android:textSize="13sp"
            android:textColorHint="@color/hintColor"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="10dp"
            android:hint="请输入验证码"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_get_verification"
            android:layout_marginRight="10dp"
            android:background="@color/text_blue2"
            android:text="获取验证码"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_width="97dp"
            android:layout_height="30dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_my_password_change"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:background="@drawable/bind_gray_bg"
        android:layout_marginTop="30dp"
        android:layout_width="300dp"
        android:text="确定更换"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:layout_height="49dp" />

</LinearLayout>