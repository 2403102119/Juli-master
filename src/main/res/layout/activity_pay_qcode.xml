<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_pay_qcode"
    android:background="@color/app_bg"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">

    <ImageView
        android:id="@+id/img_pay_qcode"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:layout_width="300dp"
        android:layout_height="300dp" />

        <ImageView
            android:id="@+id/img_pay_upload_picture"
            android:visibility="visible"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="115dp"
            android:layout_width="250dp"
            android:layout_height="250dp" />

        <TextView
            android:id="@+id/tv_long_press_tip"
            android:visibility="visible"
            android:layout_marginTop="5dp"
            android:text="长按识别或保存二维码"
            android:textSize="@dimen/dimen_12sp"
            android:textColor="@color/hintColor"
            android:layout_below="@id/img_pay_upload_picture"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_upload_sure"
        android:background="@color/text_blue2"
        android:gravity="center"
        android:text="提 交"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="49dp" />

</LinearLayout>